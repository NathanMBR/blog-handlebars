{{#each errors}}
    <div class="alert alert-danger">{{error}}</div>
{{else}}
{{/each}}

<h2>Add post</h2>
<div class="card">
    <div class="card-body">
        <form action="/admin/posts/add" method="POST">
            <label for="title">Title: </label>
            <input type="text" name="title" placeholder="Post title" class="form-control mb-2" required>
            <label for="description">Description:</label>
            <textarea name="description" placeholder="Description..." class="form-control mb-2" required></textarea>
            <label for="category">Category:</label>
            <select name="category" class="custom-select mb-2">
                {{#each categories}}
                    <option value="{{category}}">{{category}}</option>
                {{else}}
                    <option value="0">No categories available.</option>
                {{/each}}
            </select>
            <label for="post">Post:</label>
            <textarea name="post" placeholder="Your post..." class="form-control mb-2" required></textarea>
            <label for="slug">Slug: </label>
            <input type="text" name="slug" placeholder="Post slug (minimum {{minSlug}} characters)" class="form-control" required>
            <input type="hidden" name="author" value="{{username}}">
            <button type="submit" class="btn btn-outline-success mt-4">Create post</button>
        </form>
    </div>
</div>
<hr>
<a href="/admin/posts"><button class="btn btn-secondary">Back</button></a>