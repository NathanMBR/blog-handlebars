<div class="card mb-2">
    <div class="card-body">
        <h2>Edit post/h2>
        <form action="/admin/posts/edit" method="POST">
            <label for="title">Title: </label>
            <input type="text" name="title" placeholder="Post title" class="form-control mb-2" value="{{post.title}}" required>
            <label for="description">Description:</label>
            <textarea name="description" placeholder="Description..." class="form-control mb-2" required>{{post.description}}</textarea>
            <label for="category">Category: <small style="color: gray;">(Replace category manually)</small></label>
            <select name="category" class="custom-select mb-2">
                {{#each categories}}
                    <option value="{{category}}">{{category}}</option>
                {{else}}
                    <option value="0">No categories available.</option>
                {{/each}}
            </select>
            <label for="post">Post:</label>
            <textarea name="post" placeholder="Your post..." class="form-control mb-2" required>{{post.post}}</textarea>
            <label for="slug">Slug: </label>
            <input type="text" name="slug" placeholder="Post slug" class="form-control" value="{{post.slug}}" required>
            <input type="hidden" name="id" value="{{post._id}}">
            <button type="submit" class="btn btn-outline-success mt-4">Edit post</button>
        </form>
    </div>
</div>
<a href="/admin/posts"><button class="btn btn-secondary mb-2">Back</button></a>